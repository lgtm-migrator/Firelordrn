{
	"name": "firelordrn",
	"version": "0.9.1",
	"description": "ðŸ”¥ Write truly scalable firestore code with complete deep typing firestore wrapper, no more typing hell in your firestore code.",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"reinstall": "rm -rf node_modules/ && rm -rf package-lock.json && npm i",
		"tsc": "tsc -p tsconfigBuild.json",
		"lint": "eslint . --ext .ts",
		"lint-fix": "npm run lint --fix",
		"build": "rm -rf dist && rm -rf types && babel src --out-dir dist --extensions \".ts\" && npm run tsc",
		"test": "jest",
		"pub": "npm run build && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylim88/firelordrn.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tylim88/firelordrn/issues"
	},
	"homepage": "https://github.com/tylim88/firelordrn#readme",
	"keywords": [
		"firebase",
		"firestore",
		"function",
		"wrapper",
		"typescript",
		"field",
		"value",
		"key",
		"document",
		"collection",
		"react-native",
		"where",
		"orderBy",
		"batch",
		"transaction"
	],
	"devDependencies": {
		"@babel/cli": "^7.4.3",
		"@babel/core": "^7.4.3",
		"@babel/node": "^7.2.2",
		"@babel/plugin-proposal-export-namespace-from": "^7.14.5",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-typescript": "^7.10.4",
		"@react-native-firebase/firestore": "^12.9.3",
		"@types/jest": "^27.0.2",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"babel-core": "^6.26.3",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^27.2.5",
		"babel-plugin-module-resolver": "^4.1.0",
		"eslint": "^7.32.0",
		"eslint-cli": "^1.1.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^4.2.5",
		"jest": "^27.2.5",
		"jsdoc": "^3.6.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.4.1",
		"ts-essentials": "^9.0.0",
		"ts-jest": "^27.0.5",
		"typescript": "^4.4.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts}": [
			"npm run tsc",
			"npm run lint --fix",
			"prettier --write"
		]
	}
}
